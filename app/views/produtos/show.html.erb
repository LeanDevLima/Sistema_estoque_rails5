<div class="page-header">
  <%= link_to produtos_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Voltar
  <% end %>
  <%= link_to edit_produto_path(@produto), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Editar
  <% end %>
  <h1>Mostrar produto</h1>
</div>

<dl class="dl-horizontal">
  <dt>Nome:</dt>
  <dd><%= @produto.nome %></dd>

  <dt>Descrição:</dt>
  <dd><%= @produto.descrição %></dd>

  <dt>Quantidade:</dt>
  <dd><%= @produto.quantidade %></dd>

  <dt>Vencimento:</dt>
  <dd><%= @produto.vencimento %></dd>

  <dt>Preco compra:</dt>
  <dd><%= @produto.preco_compra %></dd>

  <dt>Preco veda:</dt>
  <dd><%= @produto.preco_veda %></dd>

</dl>
